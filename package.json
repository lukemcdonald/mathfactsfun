{
  "name": "mathfacts",
  "private": true,
  "sideEffects": false,
  "author": "Luke McDonald <thelukemcdonald@gmail.com> (https://lukemcdonald.com/)",
  "type": "module",
  "imports": {
    "#app/*": "./app/*"
  },
  "scripts": {
    "build": "NODE_ENV=production remix vite:build",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "dev": "NODE_ENV=development remix vite:dev",
    "format": "prettier ./app",
    "format:fix": "prettier ./app --write --ignore-unknown",
    "lint": "eslint ./app --report-unused-disable-directives",
    "lint:fix": "eslint ./app --fix --report-unused-disable-directives",
    "start": "NODE_ENV=production NODE_OPTIONS='--import ./instrument.server.js' remix-serve ./build/server/index.js",
    "style": "npm run lint:fix && npm run format:fix",
    "test": "jest",
    "test:e2e": "playwright test",
    "typecheck": "tsc"
  },
  "lint-staged": {
    "app/**/*.{js,jsx,ts,tsx,css,md}": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ]
  },
